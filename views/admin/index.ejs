<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark justify-content-center">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">
            <span class="display-5" style="color: white !important;">Ordering</span> <span class="text-decoration-underline">Services</span>
          </a>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row flex-nowrap text-center">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark" style="font-size: 1.7vw;">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <!-- <h3 href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline">Menu</span>
                    </h3> -->
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li class="nav-item">
                            <a href="/admin" class="nav-link align-middle px-0">
                                </i> <span class="ms-1 d-none d-sm-inline">Home</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/menu_6h512-admin" class="nav-link px-0 align-middle">
                               <span class="ms-1 d-none d-sm-inline">Menu</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/customer_orders" class="nav-link px-0 align-middle">
                               <span class="ms-1 d-none d-sm-inline">Orders</span>
                            </a>
                        </li>
                        <li class="dropdown">
                            <a class="nav-link px-0 align-middle dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">More Option</a>
                            <ul class="dropdown-menu">
                              <li><a class="dropdown-item" href="/admin">Administration</a></li>
                              <li><a class="dropdown-item" href="/admin/create_45employee">Add Employee</a></li>
                              <li><a class="dropdown-item" href="/admin/menu_add">Add Menu</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col py-3">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Admin ID</th>
                            <th>Name</th>
                            <th>Contact</th>
                            <th>Username</th>
                            <th>Password</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% Object.values(admins).forEach((admin) => { %>
                        <tr>
                            <td><%= admin.admin_id %></td>
                            <td><%= admin.admin_name %></td>
                            <td><%= admin.admin_contact %></td>
                            <td><%= admin.admin_username %></td>
                            <td><%= admin.admin_password %></td>
                            <td>
                                  <a href="" class="p-1 text-decoration-none">
                                      <i class="material-icons ">edit</i>
                                  </a>
                                  <a href="/admin/admin-delete/<%= admin.admin_id %>" class="p-1 text-decoration-none" style="color: red !important;" >
                                      <i class="material-icons">delete</i>
                                  </a>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                  </table>
            </div>
        </div>
    </div>
    
    
</body>
</html>